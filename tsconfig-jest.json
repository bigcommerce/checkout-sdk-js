{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "scripthost"
        ],
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "es5"
    },
    "include": [
        "src/common/types/card-validator.d.ts",
        "src/**/*.ts"
    ]
}
