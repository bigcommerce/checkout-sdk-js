{
    "root": "packages/core",
    "sourceRoot": "packages/core/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "webpack --config webpack.config.js"
            },
            "dependsOn": [
                {
                    "target": "generate",
                    "projects": "self"
                },
                {
                    "target": "build",
                    "projects": "dependencies"
                }
            ]
        },
        "build-watch": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "webpack --config webpack.config.js --config-name cjs --watch --progress"
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "dependencies"
                }
            ]
        },
        "build-cdn": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "webpack --config webpack-cdn.config.js --config-name umd",
                    "webpack --config webpack-cdn.config.js --config-name umd-loader"
                ]
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "dependencies"
                }
            ]
        },
        "prebundle-dts": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "cwd": "packages/core",
                "parallel": false,
                "commands": ["tsc --outDir ../../temp --declaration"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "fix": true,
            "options": {
                "lintFilePatterns": ["packages/core/**/*.ts"]
            },
            "dependsOn": [
                {
                    "target": "generate",
                    "projects": "self"
                }
            ]
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/core"],
            "options": {
                "jestConfig": "packages/core/jest.config.js",
                "passWithNoTests": true
            },
            "dependsOn": [
                {
                    "target": "generate",
                    "projects": "self"
                }
            ]
        },
        "generate": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "commands": [
                    "npx nx generate @bigcommerce/checkout-sdk/workspace-tools:auto-export --projectName=core",
                    "npx nx generate @bigcommerce/checkout-sdk/workspace-tools:extend-interface --projectName=core"
                ],
                "parallel": false
            }
        }
    },
    "tags": []
}
