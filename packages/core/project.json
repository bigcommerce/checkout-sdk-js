{
  "root": "packages/core",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
          "command": "webpack --config webpack.config.js"
      }
    },
    "build-watch": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
          "command": "webpack --config webpack.config.js --config-name cjs --watch --progress"
      }
    },
    "build-cdn": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
          "parallel": false,
          "commands": [
            "webpack --config webpack-cdn.config.js --config-name umd",
            "webpack --config webpack-cdn.config.js --config-name umd-loader"
          ]
      }
    },
    "prebundle-dts": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
          "cwd": "packages/core",
          "parallel": false,
          "commands": [
            "tsc --outDir ../../temp --declaration"
          ]
      }
    },
    "lint": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "packages/core",
        "parallel": false,
        "commands": [
          "eslint 'src/**/*.ts'",
          "tsc --noEmit"
        ]
      }
    },
    "lint-new": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "fix": true,
      "options": {
        "lintFilePatterns": [
          "packages/core/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/core"
      ],
      "options": {
        "jestConfig": "packages/core/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
