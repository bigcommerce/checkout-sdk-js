{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@bigcommerce/checkout-sdk/payment-integration-core": [
        "packages/payment-integration-core/src/index.ts"
      ],
      "@bigcommerce/checkout-sdk/core": [
        "packages/core/src/index.ts"
      ]
    }
  }
}
