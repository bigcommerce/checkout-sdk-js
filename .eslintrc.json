{
    "extends": [
        "@bigcommerce/eslint-config"
    ],
    "root": true,
    "ignorePatterns": ["**/*"],
    "plugins": ["@nrwl/nx"],
    "env": {
        "browser": true
    },
    "overrides": [
        {
          "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
          "rules": {
            "@nrwl/nx/enforce-module-boundaries": [
                "error",
                {
                  "enforceBuildableLibDependency": false,
                  "allow": [],
                  "depConstraints": [
                    {
                      "sourceTag": "*",
                      "onlyDependOnLibsWithTags": ["*"]
                    }
                  ]
                }
              ]
          }
        },
        {
          "files": ["*.ts", "*.tsx"],
          "extends": ["plugin:@nrwl/nx/typescript"],
          "rules": {}
        },
        {
          "files": ["*.js", "*.jsx"],
          "extends": ["plugin:@nrwl/nx/javascript"],
          "rules": {}
        }
      ]
}
